<h1>Avaliações</h1>
 
 <% console %>
<div class="row">
  <div class="animated flipInY col-lg-12 col-md-3 col-sm-6 col-xs-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Avaliação</th>
          <th scope="col">Respondida em</th>
          <th scope="col">Nota</th>
        </tr>
      </thead>
      <tbody>
        <% @tests.each do |test| %>
          <th scope="row"> <%= test.id  %> </th>
          <td>
            <% if @current_user.test_ids.include?(test.id) #falta pegar nota pra mudar cor do botão %>
             <%= link_to test.name, "/users_backoffice/tests/#{test.id}/user_tests/show", class:'btn btn-secondary w-50' %>
            <% else %>
              <%= link_to test.name, new_users_backoffice_test_user_test_path(test.id), class:'btn btn-primary w-50' %>
            <% end %>
          </td>
      
            <% if current_user.test_ids.include?(test.id) %>
              <% @current_user_tests.each do |user_test| %>
                <% if user_test.test_id == test.id %>
                  <td>
                    <%= date_formatter(l user_test.created_at) %>
                  </td>
                  <td>
                    <p class="<%= user_test.grade >= 7 ? 'btn btn-outline-success p-2' : 'btn btn-outline-danger p-2' %>" style="cursor: default">
                      <%= user_test.grade.round(2) %>
                    </p>
                  </td>
                <% end %>
              <% end %>
            <% else %>
              <td>
                -
              </td>
              <td>
                -
            </td>
            <% end %>
      
         
        
         
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>

