<h1>Avaliações</h1>
 
 <% console %>
<div class="row">
  <div class="animated flipInY col-lg-12 col-md-3 col-sm-6 col-xs-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Avaliação</th>
          <th scope="col">Respondida em</th>
          <th scope="col">Nota</th>
        </tr>
      </thead>
      <tbody>
        <% @tests.each do |test| %>
          <th scope="row"> <%= test.id  %> </th>
          <td>
            <% if @current_user.test_ids.include?(test.id) #coisa da grade aqui %>
             <%= link_to test.name, "/users_backoffice/tests/#{test.id}/user_tests/show", class:'btn btn-success w-50' %>
            <% else %>
              <%= link_to test.name, new_users_backoffice_test_user_test_path(test.id), class:'btn btn-primary w-50' %>
            <% end %>
          </td>
          <td>
            <% if @test_submission_time.keys.include?(test.id) #falta testar pra ver se tafuncionando ainda %>
              <%= date_formatter(l @test_submission_time[test.id]) %>
            <% else %>
              -
            <% end %>
          </td>
          <td>
            TODO GRADE
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>

